{
  "name": "@todo/server",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "heroku-run-build-script": true,
  "scripts": {
    "dev": "tsnd -r tsconfig-paths/register --respawn --no-notify --ignore-watch node_modules --transpile-only src/index.ts",
    "lint": "eslint --ext=.ts,.js src",
    "lint:fix": "eslint --ext=.ts,.js --fix src",
    "test": "NODE_ENV=testing jest",
    "start": "node ./dist/index.js",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "db:migrate:make": "knex --knexfile=./src/config/knexfile.ts migrate:latest",
    "heroku-postbuild": "echo Skip build on Heroku"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.21.4",
    "pg": "^8.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/chai": "^4.2.12",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.13",
    "@types/rimraf": "^3.0.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.0",
    "supertest": "^4.0.2",
    "ts-node-dev": "^1.0.0-pre.58",
    "tsconfig-paths": "^3.9.0"
  }
}
