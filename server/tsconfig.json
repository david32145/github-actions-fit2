{
  "compilerOptions": {
   "target": "ES2017", 
   "module": "commonjs",
   "allowJs": true,
   "outDir": "./dist",
   "resolveJsonModule": true,
   "strict": true,
   "baseUrl": "./",
   "paths": {
      "@config/*": ["./src/config/*"],
      "@core/*": ["./src/core/*"],
      "@Database": ["./src/database/Database.ts"],
      "@app/*": ["./src/app/*"]
    }, 
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
