{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "commonjs",                     
    "lib": ["es6"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": ".",                      
    "removeComments": true,                
    "typeRoots": [
      "./node_modules/@types"
    ],
    "noImplicitAny": false,                          
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": false,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "./src/config/*"
      ],
      "@core/*": [
        "./src/core/*"
      ],
      "@Database": [
        "./src/database/Database.ts"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@application": [
        "./src/app.ts"
      ]
    }
  },
  "include": [
    "src/**/*", 
    "__test__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}